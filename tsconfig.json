{
	"compilerOptions": {
		"allowJs": true,
		"target": "ES2020",
		"lib": [ "es2019", "es2020", "DOM" ],
		"moduleResolution": "node",
		"strict": true,
		"module": "ESNext",
		"noImplicitAny": true,
		"noImplicitThis": true,
		"alwaysStrict": true,
		"strictNullChecks": true,
		"esModuleInterop": true,
		"skipLibCheck": true,
		"types": [
			"@types/jest",
			"@types/node"
		],
		"noEmit": true,
		"jsx": "react",
		"jsxFactory": "h",
		"jsxFragmentFactory": "Fragment"
	},
	"include": ["src", "test"]
}